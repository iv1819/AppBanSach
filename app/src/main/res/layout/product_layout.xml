<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- First Product -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPrd1"
            android:layout_width="150dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/book2"
            android:layout_height="200dp"
            />

        <TextView
            android:id="@+id/txtNamePD1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPricePD1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price 1" />
    </LinearLayout>

    <!-- Second Product -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPrd2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/book2"

            />

        <TextView
            android:id="@+id/txtNamePD2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product 2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPricePD2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price 2" />
    </LinearLayout>

</LinearLayout>
